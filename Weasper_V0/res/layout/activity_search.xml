<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
        <LinearLayout
            android:id="@+id/layout_principal_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dip"
            android:orientation="vertical" >

            <com.tools.MyEditText
                android:id="@+id/editText_search"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/searchbar"
                android:drawableLeft="@drawable/searchicon"
                android:drawablePadding="10sp"
                android:ems="10"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:hint="Search someone"
                 />

            <LinearLayout
                android:id="@+id/layout_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnrandom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttoninviterate"
                    android:text="Random"
                    android:textColor="#ce136b"
                    android:textSize="25px"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnaz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttoninviterate"
                    android:text="A-Z"
                    android:textColor="#ce136b"
                    android:textSize="25px"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnfrequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/buttoninviterate"
                    android:text="Frequency"
                    android:textColor="#ce136b"
                    android:textSize="25px"
                    android:textStyle="bold" />
            </LinearLayout>

            <include layout="@layout/liste_view_search" />
        </LinearLayout>

</LinearLayout>